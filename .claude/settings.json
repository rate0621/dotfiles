{
  "permissions": {
    "allow": [
      "Bash(pip install:*)",
      "Bash(python -m pytest:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(python *)",
      "Bash(python3*)",
      "Bash(sqlite3:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true
  }
}
